<%= render 'layouts/menubar' %>
  <div class="container">
    <div class="row">
      <div class='col-3'></div>
      <h4 style="margin: 30px 0;">新規会員登録</h4>
    </div>
    <div class="row">
      <div class="col-3"></div>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :名前 %>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "2文字以上で設定してください", size: "50" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上で設定してください" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード（確認用） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "上記と同じパスワードを入力してください" %>
        </div>
        <div class="form-group">
          <td><%= f.submit "新規登録", class: 'btn btn-primary btn-lg btn-block' %></td>
        </div>
      <% end %>
    </div>
  </div>