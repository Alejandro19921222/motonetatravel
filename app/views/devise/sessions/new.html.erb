<%= render 'layouts/menubar' %>
  <div class="container d-flex align-items-center justify-content-center">
    <div class="row">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group">
          <h4 class="text-center" style="margin: 20px 0;">ログイン</h4>
        </div>
        <div class="form-group">
          <label class="control-label col-xs-2">名前</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "ユーザー名", size: "30" %>
        </div>
        <div class="form-group">
          <label class="control-label col-xs-2">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
        </div>
        <div class="form-group">
          <td><%= f.submit "ログイン", class: 'btn btn-primary btn-lg btn-block' %></td>
        </div>
      <% end %>
    </div>
  </div>
