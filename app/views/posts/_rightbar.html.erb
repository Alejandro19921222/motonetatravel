
<div class="card-box" style="margin-top: 30px;">
  <h5 style="margin-bottom: 20px;">サイト内検索</h5>
  <div class="form-group">
    <%= form_with url: finder_path, method: :get, local: :true do |f| %>
      <span><%= f.select :range, options_for_select([['User'], ['Post'], ['Tag']]) %></span>
      <%= f.hidden_field :search, "部分一致" => "partial_match" %>
      <span><%= f.text_field :word, size: "18" %></span>
      <span><%= f.submit "検索" %></span>
    <% end %>
  </div>
</div>
<div class="card-box" style="margin-top: 30px;">
  <h5 style="margin-bottom: 20px;">タグ一覧</h5>
  <ul>
    <li>
      <%= link_to "すべて", posts_path()  %>
    </li>
  <% tag_list.each do |list| %>
    <li>
      <%= link_to list.tag_name, posts_path(tag_id: list.id)  %>
      <%= "(#{list.posts.count})" %>
    </li>
  <% end %>
  </ul>
</div>