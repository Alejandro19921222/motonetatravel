<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/info', user: current_user %>
    </div>
    <div class='col-md-6'>
      <div class="postbox">
        <p><%= @post.title %></p>
        <p><%= @post.body %></p>
        <% if @user == current_user %>
            <span><%= link_to '編集', edit_post_path(@post), class: "btn btn-sm btn-success edit_book_#{@post.id}" %></span>
            <span><%= link_to '削除', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@post.id}"%></span>
          <% else %>
          <% end %>
      </div>
    </div>
    <div class='col-md-3'>
    </div>
  </div>
</div>