  <div class="postbox">
    <% posts.each do |post| %>
    <% post.tags.each do |tag| %>
       <div class="user-box">
         <span><%# attachment_image_tag(post.user, :profile_image,:fill,20,20, fallback: "no_image.jpg", size: "20×20") %></span>
         <span><%= post.user.name %></span>
       </div>
        <div class="image-box">
          <% if post.post_images.present? %>
            <% post.post_images.each do |post_image| %>
              <p><%= attachment_image_tag(post_image.post_images, :post_images,:fill,200,200, fallback: "no_image.jpg") %></p>
            <% end %>
          <% else %>
            画像はありません。
          <% end %>
        </div>
        <div class="title-box">
          <p><%= post.title %></p>
        </div>
        <div class="tag-box">
          <span><%= link_to tag.tag_name,posts_path(tag_id: tag.id) %></span>
        </div>
    <% if user_signed_in? %>
      <% if post.favorited_by?(current_user) %>
        <td>
          <%= link_to post_favorites_path(post), method: :delete do %>♥<%= post.favorites.count %> いいね
          <% end %>
        </td>
      <% else %>
        <td>
          <%= link_to post_favorites_path(post), method: :post do %>♡<%= post.favorites.count %> いいね
          <% end %>
        </td>
      <% end %>
    <% else %>
    <% end %>
    <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <% end %>
  <% end %>
</div>