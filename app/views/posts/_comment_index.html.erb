<div class="widget-area no-padding blank">
  <div class="row">
    <div class="col-sm-12">
      <h3 style="margin: 20px 0;">コメント一覧</h3>
    </div><!-- /col-sm-12 -->
  </div><!-- /row -->
  <% post.post_comments.each do |post_comment| %>
  <div class="row">
    <div class="col-sm-1">
      <div class="thumbnail">
        <p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></p>
      </div><!-- /thumbnail -->
    </div><!-- /col-sm-1 -->
    <div class="col-sm-11">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong><%= post_comment.user.name %></strong>
          <span class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
          <% if post_comment.user == current_user %>
            <span><%= link_to "削除", post_post_comments_path(post.id, post_comment.id), method: :delete %></span>
          <% end %>
        </div>
        <div class="panel-body">
          <%= post_comment.comment %>
        </div><!-- /panel-body -->
      </div><!-- /panel panel-default -->
    </div><!-- /col-sm-5 -->
    </div>
  <% end %>
</div>