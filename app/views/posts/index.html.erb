<%= render 'layouts/about' %>
<%= render 'layouts/menubar' %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 border-right'>
      <%= render 'users/leftbar', user: current_user %>
    </div>
    <div class='col-md-6'>
      <% if @tag != nil %>
        <%= "タグが" + strong= "#{@tag.tag_name}" + "の投稿一覧" %>
        <%= render "index", posts: @tag_posts %>
      <% else %>
        <%= render "index", posts: @posts %>
      <% end %>
    </div>
    <div class='col-md-3 border-left'>
      <%= render 'finders/searchbar' %>
      <%= render 'posts/tagbar', tag_list: @tag_list %>
    </div>
  </div>
  <div class="row d-flex align-items-center justify-content-center">
    <div class="pagination" style= "margin: 10px;"><%= paginate @posts %></div>
  </div>
</div>