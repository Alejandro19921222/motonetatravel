<%= render 'layouts/about' %>
<%= render 'layouts/menubar' %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 border-right'>
      <%= render 'users/leftbar', user: current_user %>
    </div>
    <div class='col-md-6'>
      <% if @tag != nil %>
        <%= "タグが" + strong= "#{@tag.tag_name}" + "の投稿一覧" %>
      <% end %>
      <%= render "index", posts: @posts %>
    </div>
    <div class='col-md-3 border-left'>
      <%= render 'rightbar', tag_list: @tag_list %>
    </div>
  </div>
</div>