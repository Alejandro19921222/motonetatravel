<% if user_signed_in? %>
  <div class="profile-box border" style="margin: 15px;">
    <div class="profileimage-box border text-center">
      <%= attachment_image_tag(user, :profile_image, :fill, 300, 300, fallback: "no_image.jpg", size: '100x100', class: "rounded-circle") %>
    </div>
    <div class="name-box border" style="padding: 5px 10px;">
      <%= user.name %>
    </div>
    <div class="follow-box border" style="padding: 5px 10px;">
      <span style="padding-right: 10px;">
        <a href="<%= user_followings_path(user) %>">
          <%= user.followings.count %>
          フォロー
        </a>
      </span>
      <span>
        <a href="<%= user_followers_path(user) %>">
          <%= user.followers.count %>
          フォロワー
        </a>
      </span>
    </div>
    <div class="draft-box border" style="padding: 5px 10px;">
      <%= link_to '下書き一覧', user_confirm_path(user.id), class: "btn btn-block" %>
    </div>
    <div class="edit-box border" style="padding: 5px 10px;">
      <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div>
  </div>

    <tr>
      <% if current_user != user %>
      <% if current_user.following?(user) %>
        <th><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %></th>
      <% else %>
        <th><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %></th>
      <% end %>
      <% end %>
    </tr>
    <tr>
      <% if current_user == user %>
      <% else %>
      <% end %>
    </tr>
    <tr>
      <% if current_user != user %>
        <%= link_to 'チャットする', message_path(user.id) %>
      <% end %>
    </tr>
  </table>
  <div class='row'>

  </div>
<% else %>
<% end %>