<%= render 'layouts/menubar' %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 border-right'>
      <%= render 'leftbar', user: current_user %>
    </div>
    <div class='col-md-6'>
      <div class="row" style="margin-top: 30px;">
        <div class="col-md-6 img">
          <%= attachment_image_tag(@user, :profile_image, :fill, 208, 208, fallback: "no_image.jpg") %>
        </div>
        <div class="col-md-6 details">
          <blockquote>
            <h5><%= @user.name %></h5>
            <span>
              <% if current_user != @user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
                <% end %>
              <% end %>
            </span>
            <span>
              <% if current_user != @user %>
                <%= link_to 'チャットする', message_path(@user.id), class: "btn btn-primary" %>
              <% end %>
            </span>
            <small>
              <span style="padding-right: 10px;">
                <a href="<%= user_followings_path(@user) %>">
                  <%= @user.followings.count %>
                  フォロー
                </a>
              </span>
              <span>
                <a href="<%= user_followers_path(@user) %>">
                  <%= @user.followers.count %>
                  フォロワー
                </a>
              </span>
            </small>
          </blockquote>
          <p><%= @user.introduction %></p>
        </div>
      </div>
      <table class='table table-hover table-inverse' style="margin-top: 30px;">
        <thead>
          <tr>
            <th colspan="3">Title</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post_path(post), class: "book_#{post.id}" %></td>
              <% if @user == current_user %>
                <td><%= link_to '編集', edit_post_path(post.id), class: "btn btn-sm btn-success edit_book_#{post.id}" %><td>
                <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{post.id}"%></td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-md-3'>
    </div>
  </div>
</div>


